@page
@model AlbumStore.Pages.Artists.CreateModel

@{
	ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Artist</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Artist.Name" class="control-label"></label>
				<input asp-for="Artist.Name" class="form-control" />
				<span asp-validation-for="Artist.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Artist.Description" class="control-label"></label>
				<input asp-for="Artist.Description" class="form-control" />
				<span asp-validation-for="Artist.Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Artist.Genre" class="control-label"></label>
				<select asp-for="Artist.GenreID" class="form-control"
						asp-items="@Model.GenreNameSL">
					<option value="">--Select Genre--</option>
				</select>
				<span asp-validation-for="Artist.Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
